<resources
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppBaseTheme" parent="AppBarTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppBaseMainTheme" parent="AppBarTheme">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="AppBarTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/red</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/red</item>
        <!--toolbar文字的颜色-->
        <item name="@android:textColorPrimary">@android:color/white</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/white</item>
        <!--toolbar上菜单文字的颜色-->
        <item name="actionMenuTextColor">#ffffff</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="toolbarStyle">@style/ClubToolbar</item>
    </style>
    <style name="ClubToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item><!-- 设置该属性解决空白部分-->
    </style>

    <style name="login_register_xedit_style" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/login_xedit_gray_bg</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:singleLine">true</item>

    </style>
</resources>
