<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:cpb="http://schemas.android.com/apk/res-auto"
              android:id="@+id/login_root"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="20dp">


        <com.xw.repo.xedittext.XEditText
            android:id="@+id/xedit_login_username"
            style="@style/login_register_xedit_style"
            android:hint="邮箱/电话"
            app:x_disableEmoji="true"/>


        <com.xw.repo.xedittext.XEditText
            android:id="@+id/xedit_login_password"
            style="@style/login_register_xedit_style"
            android:hint="密码"
            android:inputType="textPassword"
            app:x_disableEmoji="true"/>


        <cn.mobile.renrentou.controller.widget.button.CircularProgressButton
            android:id="@+id/circularButton_login"
            android:layout_width="196dp"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:textColor="@color/cpb_white"
            android:textSize="18sp"
            cpb:cpb_cornerRadius="48dp"
            cpb:cpb_textComplete="登录成功"
            cpb:cpb_textError="登录失败"
            cpb:cpb_textIdle="登录"
            />
</LinearLayout>